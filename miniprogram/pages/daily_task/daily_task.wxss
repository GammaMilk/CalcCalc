/* pages/daily_task/daily_task.wxss */
page {
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.notice {
  font-size: 50px;
  margin-top: 30%;
  padding-bottom: 30%;
}

.container{
  width: 90%;
  margin-bottom: 10%;
}

.selector{
  width: 100%;
  height:40px;
  font-size: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.start {
  font-size: 30px;
  margin-bottom: 30%;
  padding: 5%;
  width: 80%;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  font-weight: 400;
  text-align: center;
  box-shadow: 0px 2px 4px #67c0f0,0px 1px 2px #bf2fcb;
}

.hover{
  background-color: #e5e5e5;
}

.start text {
  background: -webkit-linear-gradient(left, #67c0f0, #bf2fcb);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
