/* pages/cropimg/cropimg.wxss */
.top {
  position: absolute;
  width: 100%;
  top: 10rpx;
  display: flex;
  flex-flow: wrap;
  z-index: 10;
  color: white;
  justify-content: space-around;
}

.hint {
  position: absolute;
  top: 10rpx;
  width: 100%;
  font-size: 33rpx;
  text-align: center;
  color: white;
  z-index: 10;
}

page {
  background: white;
}

view {
  font-size: 30rpx;
}

.bottom {
  position: absolute;
  width: 100%;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  z-index: 10;
  margin-bottom: 5%;
}

button {
  font-size: 30rpx;
  z-index: 2;
  height: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.input {
  display: flex;
  height: 50rpx;
  width: 50%;
}

.input>.label {
  min-width: 150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.input>input {
  margin-left: 10rpx;
  text-align: center;
  max-width: 160rpx;
  border: 1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}