/* pages/settings/settings.wxss */


.userInfo{
  padding-top: 5%;
  padding-left: 5%;
  display: flex;
  flex-direction: column;
}
.iconset{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 5%;
}
.imgSize {
  border-radius: 50%;
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 35px;
  left: 65%;
  background: yellow;
}

.imgSize image {
  border-radius: 50%;
  width: 200rpx;
  height:200rpx;
}

.helloSize {
  padding-top: 4%;
  font-size: 30px;
  width: 250rpx; 
  height: 50rpx; 
}

.icon{
  height: 30px;
}
.id{
  width: fit-content;
  border-style: solid;
  border-width: 2px;
  border-color: magenta;
  color: magenta;
  font-size: 25rpx;
  position: relative;
  top: 10px;
}

.container{
  border-color: #10AEFF;
  display: flex;
  flex-direction: column;
  align-items:initial;
}

.item{
  font-size: 40rpx;
  padding-left: 5%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-width: 1px;
  border-bottom-style: solid;
  border-color: #999999;
}

.hover{
  background: #e5e5e5;
}