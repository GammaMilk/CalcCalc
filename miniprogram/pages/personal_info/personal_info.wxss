/* pages/personal_info/personal_info.wxss */
page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10%;
}

.imgSize {
  border-radius: 50%;
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
  background: yellow;
}

.imgSize image {
  width: 240rpx;
  height: 240rpx;
}

.container {
  padding-top: 10%;
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 10%;
}

.btn{
  border-style: solid;
  border-radius: 5%;
  border-width: 4rpx;
  height: 60rpx;
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.inputSize {
  display: flex;
  flex-direction: column;
  width: 90%;
  align-items: center;
  height: 20%;
  justify-content: space-around;
  font-size: 20px;
  padding-top: 5%;
}