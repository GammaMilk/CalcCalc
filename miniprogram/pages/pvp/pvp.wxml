<!--pages/pvp/pvp.wxml-->
<view class='testStatus'>
  <view class='iconSet'>
    <image src='/image/time.png' class='icon' mode="heightFix"></image>
    <view>{{minute}}:{{second}}</view>
  </view>
  <view class='iconSet'>
    <view>{{rival}}：{{anotherCount+1}} 自己：{{count+1}} / {{questionArray.length + count + 1}}</view>
    <image src='/image/question.png' class='icon' mode="heightFix"></image>
  </view>
</view>


<view class='screen'>
  <view class='question' style="text-align: end;">{{num1}}</view>
  <view>{{operator}}</view>
  <view class='question'>{{num2}}</view>
  </view>

<view style="display:flex;flex-direction:row;width: 100%;justify-content: center;">
  <view style="font-size: 30px;"> = </view>
  <view class='answer' animation='{{animation}}'>{{result}}</view>
</view>
<view class='test-bg'>
  <view class='btnGroup'>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id7}}">7</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id8}}">8</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id9}}">9</view>
  </view>
 
  <view class='btnGroup'>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id4}}">4</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id5}}">5</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id6}}">6</view>
  </view>
 
  <view class='btnGroup'>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id1}}">1</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id2}}">2</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id3}}">3</view>
  </view>
 
  <view class='btnGroup'>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{C}}">C</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{id0}}">0</view>
    <view class='item' hover-class="hover" bindtap='clickButton' id="{{back}}">B</view>
  </view>
</view>