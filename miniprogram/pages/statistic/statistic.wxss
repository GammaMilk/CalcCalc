/* pages/statistic/statistic.wxss */
page {
  width:100%;
  height: 100%;
}

.point{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	overflow: hidden;
	padding: 1%;
}

.title1{
  display: flex;
  justify-content: center;
 }

.label{
	display:flex;
	flex-direction: row;
	align-items: center;
	width: 90%;
}

 .label1{
  display: flex;
  justify-content: center;
	padding-bottom: 5%;
	color:cornflowerblue;
	font-size:0.8rm;
	width: 100%;
 }

 .label2{
  display: flex;
  justify-content: center;
	padding-bottom: 5%;
	color:rgb(0, 190, 95);
	font-size:0.8rm;
	width: 100%;
 }

 .percentage{
  width: 100%;
  display: flex;
	justify-content: center;
	height: 15%;
	font-size: 0.8rem;
	color:cadetblue
}

.global{
	padding: 0%;
  position: absolute;
  right: 3%;
}

.but{
	position:fixed;
	width:90%;
	margin: 0 5%;
	display: flex;
	flex-direction: row;
	align-items: center;
	bottom:20rpx;
}