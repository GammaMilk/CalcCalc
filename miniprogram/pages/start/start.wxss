/* pages/start/start.wxss */
page {
  width: 100%;
  height: 100%;
}
 
.test-bg {
  position: fixed;
  bottom: 0;
}
 
.screen {
  position: relative;
  color: #000000;
  font-size: 30px;
  top: 100rpx;
  text-align: center;
  width: 730rpx;
  word-wrap: break-word;
  display: flex; /*弹性显示结构*/
  flex-direction: row;/*横向显示*/
}
 
.answer{
  color: #000000;
  font-size: 30px;
  text-align: center;
  position: relative; 
  top: 180rpx;
  word-wrap: break-word;
}

.btnGroup {
  display: flex; /*弹性显示结构*/
  flex-direction: row;/*横向显示*/
}

.item {
  width: 250rpx;
  line-height: 180rpx;
  border-radius: 5%;
  text-align: center;
}

.question{
  width: 33%;
  text-align: center;
}

