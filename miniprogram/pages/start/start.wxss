/* pages/start/start.wxss */
page {
  width: 100%;
  height: 100%;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.icon{
  height: 25px;
  margin-left: 4px;
  margin-right: 4px;
}

.iconSet{
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  align-items: center;
}
 
.testStatus{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
 
.screen {
  color: #000000;
  font-size: 30px;
  width: 100%;
  word-wrap: break-word;
  display: flex; /*弹性显示结构*/
  flex-direction: row;/*横向显示*/
  justify-content: center;
}
 
.answer{
  color: #000000;
  font-size: 30px;
  width: 40%;
  word-break: break-all;
  height: fit-content;
  min-height: 40px;
  border: 2px;
  border-style:solid;
}

.test-bg{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
}

.btnGroup {
  display: flex; /*弹性显示结构*/
  flex-direction: row;/*横向显示*/
  width: 100%;
  height: 24%;
  justify-content: space-around;
  padding-bottom: 3%;
}

.item {
  width: 30%;
  line-height: 180rpx;
  border-radius: 5%;
  border-style: solid;
  border-color: #666666;
  text-align: center;
  font-size: 1.8em;
  font-family:Arial, Helvetica, sans-serif;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  font-weight: 400;
  text-align: center;
  box-shadow: 0px 4px 4px gray;
}

.question{
  font-size: 2rem;
}

.hover{
  background: linear-gradient(145deg, rgba(221,214,214, .6), rgba(235,228,228, .7));
  border: 0px;
  border-style: none;
  box-shadow:0px 2px 4px gray;
}