/* pages/main/main.wxss */

page {
  width: 100%;
  height: 100%;
  justify-content: space-between;
  align-items: center;
}
 .helloUser{
   width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding-top: 5%;
 }

.imgSize {
  border-radius: 50%;
  width: 240rpx;
  height: 240rpx;
  background: yellow;
}

.imgSize image {
  border-radius: 50%;
  width: 240rpx;
  height: 240rpx;
  position: relative;
  
}

.helloSize {
  font-size: 30px;
  width: fit-content; 
  height:fit-content; 
  align-items:center;
}

.container{
  position: relative;
  width: 100%;
  top: 20rpx;
  height:300rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.item {
  width: 300rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10%;
  border-width: 5px;
  border-style:solid;
}

.task {
  height: 40%;
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 10%;
  border-width: 5px;
  border-style:solid;
  margin-bottom: 5%;
}

.hover{
  color: aqua;
  background-color: #E5E5E5;
}

.card{
  border-radius: 10%;
  border-style: groove;

}